{
  "name": "gateway",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build --target=bun --sourcemap=external --outdir=dist index.ts",
    "lint": "prettier --check .",
    "serve": "bun --watch index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "prom-client": "^15.1.3"
  },
  "targets": {
    "serve": {
      "continuous": true
    },
    "build": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "tags": [
          "ghcr.io/aaa4xu/mirvworld/gateway:latest"
        ],
        "cache-from": [
          "type=gha"
        ],
        "cache-to": [
          "type=gha,mode=max"
        ]
      }
    }
  }
}
