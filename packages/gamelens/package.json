{
  "name": "gamelens",
  "module": "index.ts",
  "scripts": {
    "build": "bun build --target=bun --sourcemap=external --outdir=dist index.ts",
    "lint": "prettier --check ."
  },
  "dependencies": {
    "openfront": "workspace:*",
    "utils": "workspace:*",
    "replay-storage": "workspace:*",
    "compressed-storage": "workspace:*",
    "matches": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "type": "module",
  "nx": {
    "projectType": "application",
    "targets": {
      "build": {
        "cache": true
      },
      "lint": {
        "cache": true
      },
      "container": {
        "executor": "@nx-tools/nx-container:build",
        "options": {
          "tags": [
            "ghcr.io/aaa4xu/mirvworld/gamelens:latest"
          ],
          "cache-from": [
            "type=gha"
          ],
          "cache-to": [
            "type=gha,mode=max"
          ]
        }
      }
    }
  }
}
