{
  "name": "matches",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "db:push": "bunx --bun drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:generate": "bunx --bun drizzle-kit generate",
    "build": "bun build --target=bun --sourcemap=external --outdir=dist index.ts",
    "lint": "prettier --check ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@trpc/server": "^11.4.3",
    "drizzle-orm": "^0.44.3",
    "mysql2": "^3.14.2",
    "superjson": "^2.2.2"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "build": {
        "cache": true
      },
      "lint": {
        "cache": true
      },
      "container": {
        "executor": "@nx-tools/nx-container:build",
        "options": {
          "tags": [
            "ghcr.io/aaa4xu/mirvworld/matches:latest"
          ],
          "cache-from": [
            "type=gha"
          ],
          "cache-to": [
            "type=gha,mode=max"
          ]
        }
      }
    }
  }
}
