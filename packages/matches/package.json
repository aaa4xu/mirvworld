{
  "name": "matches",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build --target=bun --sourcemap=external --outdir=dist index.ts",
    "lint": "prettier --check .",
    "#test": "bun test",
    "serve": "bun --watch index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@trpc/server": "^11.4.3",
    "drizzle-orm": "^0.44.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mysql2": "^3.14.2",
    "openskill": "^4.1.0",
    "superjson": "^2.2.2"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "build": {
        "cache": true
      },
      "lint": {
        "cache": true
      },
      "test": {
        "cache": true
      },
      "serve": {
        "continuous": true
      },
      "container": {
        "executor": "@nx-tools/nx-container:build",
        "options": {
          "tags": [
            "ghcr.io/aaa4xu/mirvworld/matches:latest"
          ],
          "cache-from": [
            "type=gha"
          ],
          "cache-to": [
            "type=gha,mode=max"
          ]
        }
      }
    }
  }
}
